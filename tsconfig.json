{
  "compilerOptions": {
    "lib": ["DOM", "es5"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
